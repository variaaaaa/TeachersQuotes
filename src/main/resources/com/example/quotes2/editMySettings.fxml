<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quotes2.MySettings">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #fafafa;">
      <children>
         <TextField fx:id="loginField" layoutX="28.0" layoutY="128.0" prefHeight="25.0" prefWidth="240.0" promptText="Логин" />
      
                <Label fx:id="welcomeText" layoutX="60.0" layoutY="20.0" prefHeight="31.0" prefWidth="193.0" text="Teachers' quotes" textAlignment="CENTER">
            <font>
               <Font name="Book Antiqua" size="24.0" />
            </font>
         </Label>
         <Button fx:id="addQuoteButton" layoutX="113.0" layoutY="280.0" onAction="#updateQuote" text="Изменить" />
         <PasswordField fx:id="passwordField" layoutX="28.0" layoutY="187.0" prefHeight="25.0" prefWidth="240.0" promptText="Пароль" />
         <TextField fx:id="groupField" layoutX="30.0" layoutY="238.0" prefHeight="25.0" prefWidth="240.0" promptText="Группа" />
         <Button fx:id="backButton" layoutX="229.0" layoutY="360.0" onAction="#goBack" text="Назад" />
      </children>
   </AnchorPane>
</VBox>
