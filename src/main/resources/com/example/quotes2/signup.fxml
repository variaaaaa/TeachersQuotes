<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quotes2.SignUpController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #fafafa;">
        <children>
            <TextField fx:id="signupField" layoutX="28.0" layoutY="96.0" prefHeight="25.0" prefWidth="240.0" promptText="Логин" />
            <Button fx:id="signUpButton" layoutX="86.0" layoutY="290.0" onAction="#setSignUpButton" text="Зарегистрироваться" />

            <Label fx:id="welcomeText" layoutX="60.0" layoutY="20.0" prefHeight="31.0" prefWidth="193.0" text="Teachers' quotes" textAlignment="CENTER">
                <font>
                    <Font name="Book Antiqua" size="24.0" />
                </font>
            </Label>
            <PasswordField fx:id="passwordsuField" layoutX="28.0" layoutY="149.0" prefHeight="25.0" prefWidth="240.0" promptText="Пароль" />
         <TextField fx:id="role" layoutX="28.0" layoutY="245.0" prefHeight="25.0" prefWidth="240.0" promptText="Роль" />
         <TextField fx:id="studygroup" layoutX="28.0" layoutY="200.0" prefHeight="25.0" prefWidth="240.0" promptText="Группа" />
         <Button fx:id="BackToMenu" layoutX="149.0" layoutY="360.0" onAction="#backToMenu" text="На главное меню" />
        </children>
    </AnchorPane>
</VBox>
